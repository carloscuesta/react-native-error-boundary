{
  "name": "react-native-error-boundary",
  "version": "1.1.12",
  "description": "A simple and reusable React-Native error boundary component",
  "main": "src/index.js",
  "files": [
    "src",
    "README.md"
  ],
  "scripts": {
    "flow": "flow ./src",
    "lint": "eslint ./src",
    "test": "jest",
    "coverage:upload": "codecov"
  },
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carloscuesta/react-native-error-boundary.git"
  },
  "keywords": [
    "react-native",
    "error",
    "error boundary",
    "error handler",
    "componentDidCatch"
  ],
  "author": {
    "name": "carloscuesta",
    "email": "hi@carloscuesta.me",
    "url": "https://carloscuesta.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carloscuesta/react-native-error-boundary/issues"
  },
  "homepage": "https://github.com/carloscuesta/react-native-error-boundary",
  "peerDependencies": {
    "react": ">=16.6.0",
    "react-native": ">=0.57.7"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/preset-react": "^7.16.0",
    "codecov": "^3.1.0",
    "eslint": "^8.2.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-native": "^3.11.0",
    "flow-bin": "^0.167.0",
    "jest": "^27.0.4",
    "react": "^17.0.1",
    "react-native": "^0.66.3",
    "react-test-renderer": "^17.0.1"
  },
  "dependencies": {},
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "env": {
      "jest": true,
      "react-native/react-native": true
    },
    "plugins": [
      "react",
      "react-native",
      "flowtype"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:flowtype/recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/react-native"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module",
      "requireConfigFile": false
    },
    "settings": {
      "react": {
        "version": "detect",
        "flowVersion": "detect"
      },
      "import/ignore": [
        "react-native"
      ]
    }
  }
}
